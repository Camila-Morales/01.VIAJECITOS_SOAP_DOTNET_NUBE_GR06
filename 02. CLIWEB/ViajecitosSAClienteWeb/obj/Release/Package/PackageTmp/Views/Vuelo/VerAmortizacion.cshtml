@model List<ViajecitosSAClienteWeb.Models.Amortizacion>


@{
    ViewBag.Title = "Amortización de Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center mb-4">Tabla de Amortización</h3>

<form method="get" class="mb-4">
    <div class="form-group">
        <label for="facturaId">ID de Factura:</label>
        <input type="number" name="facturaId" id="facturaId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-info mt-2">Consultar</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-warning text-center">@ViewBag.Mensaje</div>
}
else if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Cuota</th>
                <th>Fecha Pago</th>
                <th>Monto</th>
                <th>Saldo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cuota in Model)
            {
                <tr>
                    <td>@cuota.MontoCuota</td>
                    <td>@cuota.FechaPago.ToShortDateString()</td>
                    <td>$@cuota.MontoCuota</td>
                    <td>$@cuota.SaldoRestante</td>
                </tr>
            }
        </tbody>
    </table>
}
